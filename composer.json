{
    "type": "library",
    "license": "Apache-2.0",
    "name": "lyonstahl/soql-builder",
    "description": "SOQL builder that simplifies the process of constructing complex queries to retrieve data from Salesforce databases",
    "keywords": [
        "soql",
        "salesforce",
        "query",
        "builder"
    ],
    "minimum-stability": "RC",
    "prefer-stable": true,
    "require": {
        "php": ">=7.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "LyonStahl\\SoqlBuilder\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "scripts": {
        "test": [
            "phpunit"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    }
}
